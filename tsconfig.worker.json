{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "types": ["@cloudflare/workers-types"],
    "typeRoots": [
      "./node_modules/@cloudflare/workers-types",
      "./node_modules/@types"
    ]
  },
  "include": ["src/functions/**/*.ts"],
  "exclude": ["node_modules"]
}
